{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "ES2016",
    "lib": ["ES6", "ES2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "baseUrl": "./src"
  },
  "include": [
    "node_modules/*",
    "./src/**/*"
  ]
}