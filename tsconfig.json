{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": [
    "node_modules/*",
    "./src/**/*"
  ]
}